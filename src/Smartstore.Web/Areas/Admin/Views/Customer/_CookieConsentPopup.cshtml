@model CustomerModel.CookieConsentModel

<modal id="cookie-consent-dialog" sm-render-at-page-end="true" sm-size="Medium">
    <modal-header sm-title="@T("Admin.Customers.CookieConsent")"></modal-header>
    <modal-body>
        <div class="grid row-gap-1 column-gap-4" style="grid-template-columns: max-content 1fr">
            <label class="fwm" asp-for="ConsentOn"></label>
            @Html.DisplayFor(x => x.ConsentOn)

            <label class="fwm" asp-for="AllowRequired"></label>
            <span><i class="fa fa-fw icon-active-@Model.AllowRequired.ToString().ToLower()"></i></span>

            <label class="fwm" asp-for="AllowAnalytics"></label>
            <span><i class="fa fa-fw icon-active-@Model.AllowAnalytics.ToString().ToLower()"></i></span>

            <label class="fwm" asp-for="AllowThirdParty"></label>
            <span><i class="fa fa-fw icon-active-@Model.AllowThirdParty.ToString().ToLower()"></i></span>

            <label class="fwm" asp-for="AdUserDataConsent"></label>
            <span><i class="fa fa-fw icon-active-@Model.AdUserDataConsent.ToString().ToLower()"></i></span>

            <label class="fwm" asp-for="AdPersonalizationConsent"></label>
            <span><i class="fa fa-fw icon-active-@Model.AdPersonalizationConsent.ToString().ToLower()"></i></span>
        </div>
    </modal-body>
    <modal-footer>
        <button class="btn btn-secondary btn-flat" data-dismiss="modal" aria-hidden="true">
            <span>@T("Common.Cancel")</span>
        </button>
    </modal-footer>
</modal>
